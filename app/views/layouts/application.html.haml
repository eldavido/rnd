!!! 5
%html
  %head
    %title= yield :title
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = yield :partial_scripts
    = csrf_meta_tags
  %body
    .container
      .masthead
        %span.logo
          = link_to 'rnd.io', controller: 'home', action: 'index'
        %ul
          - ct = controller.controller_name
          - action = controller.action_name
          %li
            = link_to 'engineers onstage', { controller: 'engineers_onstage', action: 'index' },
              class: (ct == 'engineers_onstage' and action == 'index') ? 'selected' : ''
          %li
            = link_to 'subscribe', { controller: 'statics', action: 'subscribe' },
              class: (ct == 'statics' and action == 'subscribe') ? 'selected' : ''
      .content
        = yield
      .footer
        %p
          All contents &copy; 2012 and made available pursuant to
          %a{href: 'http://creativecommons.org/licenses/by/3.0/'}Creative Commons Attribution 3.0 Unported.
          All other rights reserved. Production by
          %a{href: 'http://www.linkedin.com/in/ravisathyam'}Ravi Sathyam
          and David Albrecht, design by David Martin and DeVaris Brown of
          %a{href: 'http://www.ddux.net/'}DDUX,
          engineering by
          %a{href: 'http://prefiat.com/'} Prefiat LLC.
          Music: Hello Strings by
          %a{href: 'http://www.last.fm/music/Synergy/_/Hello+Strings'}Synergy,
          Lebanese Blonde by
          %a{href: 'http://www.last.fm/music/Thievery+Corporation/_/Lebanese+Blonde'}Thievery Corporation.
 
