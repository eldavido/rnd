!!! 5
%html
  %head
    %title celebrating innovation in science and technology : rnd.io
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .container
      .masthead
        %img{width: 100, height: 80, src: 'img.png'}
        %ul
          - ct = controller.controller_name
          %li
            = link_to 'home', { controller: 'home', action: 'index' }, class: ct == 'home' ? 'selected' : ''
          %li
            = link_to 'engineers onstage', { controller: 'eos', action: 'index' }, class: ct == 'eos' ? 'selected' : ''
          %li about
          %li contact
      .content
        = yield
          
